<Window x:Class="Hospital_Panel.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Panel"
        mc:Ignorable="d"
        Title="Login" Height="277" Width="424">
    <Grid Margin="0,14,0,7">
        <TextBlock Text="Log in" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" FontSize="36" />
        <StackPanel HorizontalAlignment="Left" Margin="15,49,0,10" Width="373">
            <Label Content="_Login:" Target="{Binding ElementName=login_field}" />
            <TextBox Name="login_field" Margin="0,0,10,0" />
            <Label Content="Password:" Target="{Binding ElementName=passwordBox}" />
            <PasswordBox x:Name="passwordBox" Margin="0,0,10,0" />
            <Button Width="150" Height="30" Margin="20" Click="Button_Click">Login</Button>
        </StackPanel>
    </Grid>
</Window>