<Window x:Class="Hospital_Panel.AddDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Panel"
        mc:Ignorable="d"
        Title="AddDoctor" Height="450" Width="479.496">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" Margin="117,16,0,355">
            Add new doctor
        </TextBlock>
        <StackPanel HorizontalAlignment="Left" Margin="28,84,0,119" Width="138">
            <Label Content="_Surname:" Target="{Binding ElementName=txtSurname}" />
            <TextBox Name="txtSurname" />
            <Label Content="_Name:" Target="{Binding ElementName=txtName}" />
            <TextBox Name="txtName" />
            <Label Content="_PESEL:" Target="{Binding ElementName=txtPesel}" />
            <TextBox Name="txtPesel" />
            <Label Content="_PWZ Number:" Target="{Binding ElementName=txtPWZ}" />
            <TextBox Name="txtPWZ" />
        </StackPanel>
    </Grid>
</Window>
